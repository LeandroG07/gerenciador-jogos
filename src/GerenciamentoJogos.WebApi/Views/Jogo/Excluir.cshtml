@model GerenciamentoJogos.Domain.Models.JogoModel

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Deseja realmente excluir esse registro?</h3>
<div>
    <h4>Jogo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdJogo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdJogo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Excluir">
        @Html.HiddenFor(m => m.IdJogo)
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
