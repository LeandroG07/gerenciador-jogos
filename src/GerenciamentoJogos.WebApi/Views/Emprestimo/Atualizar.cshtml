@model GerenciamentoJogos.WebApi.ViewModel.EmprestimoViewModel

@{
    ViewData["Title"] = "Atualizar";
}

<h1>Atualizar</h1>

<h4>Emprestimo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Atualizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.EmprestimoModel.IdEmprestimo)
            <div class="form-group">
                <label asp-for="EmprestimoModel.DataEmprestimo" class="control-label"></label>
                <input asp-for="EmprestimoModel.DataEmprestimo" class="form-control" />
                <span asp-validation-for="EmprestimoModel.DataEmprestimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmprestimoModel.Jogo" class="control-label"></label>
                <select asp-for="EmprestimoModel.Jogo.IdJogo" class="browser-default custom-select" asp-items="@(new SelectList(Model.JogosModel, "IdJogo", "Nome"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmprestimoModel.Amigo" class="control-label"></label>
                <select asp-for="EmprestimoModel.Amigo.IdAmigo" class="browser-default custom-select" asp-items="@(new SelectList(Model.AmigosModel ,"IdAmigo","Nome"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
